            private function GenerateCheckCode():String
            {
                var ran:Number;
                var number:Number;
                var code:String;
                var checkCode:String = "";
                for (var i:int = 0; i < 4; i++)
                {
                    ran = Math.random();
                    number = Math.round(ran * 10000);
                    if (number % 2 == 0)
                        code = String.fromCharCode(48 + (number % 10));
                    else
                        code = String.fromCharCode(65 + (number % 26));
                    checkCode += code;
                }
                return checkCode;
            }

